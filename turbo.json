{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "tsc": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "cache": false
    },
    "storybook": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false
    },
    "update-dependencies": {
      "cache": false
    }
  }
}
