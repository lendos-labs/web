{
  "extends": "@tsconfig/strictest/tsconfig.json",

  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "exactOptionalPropertyTypes": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "noEmit": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "./mui-theme.d.ts"],
  "exclude": ["node_modules", ".next", ".turbo", "coverage", "dist", "compiled", "build"]
}
